@{
    ViewData["Title"] = "Create Product";
}
@model Sistem_Point_Of_Sales.ViewModels.ProductViewModel

<h2>@ViewBag.message</h2>
<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Product</h2>
    </div>

    <form method="POST" enctype="multipart/form-data" asp-controller="Home" asp-action="Create">

        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ProductName">Name</label>
                <input type="text" class="form-control mb-3" asp-for="ProductName" placeholder="Enter Product Name">
                <span asp-validation-for="ProductName" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProductDescription">Description</label>
                <input type="text" class="form-control mb-3" asp-for="ProductDescription" placeholder="Enter Product Description">
                <span asp-validation-for="ProductDescription" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProductPrice">Price</label>
                <input type="text" class="form-control mb-3" asp-for="ProductPrice" placeholder="Enter Product Price">
                <span asp-validation-for="ProductPrice" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProductStock">Stock</label>
                <input type="text" class="form-control mb-3" asp-for="ProductStock" placeholder="Enter Product Stock">
                <span asp-validation-for="ProductStock" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProductCategory">Category</label>
                <input type="text" class="form-control mb-3" asp-for="ProductCategory" placeholder="Enter Product Category">
                <span asp-validation-for="ProductCategory" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TagName">Tag</label>
                <textarea type="text" class="form-control mb-3" asp-for="TagName" placeholder="Enter Tag"></textarea>
                <span asp-validation-for="TagName" class="aler-danger"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-lg btn-primary p-2" value="Submit" />
    </form>
    </div>